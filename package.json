{
  "name": "recargas-optimizado",
  "version": "2.0.0",
  "description": "Sistema optimizado de recargas prepago GPS, VOZ e IoT",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop recargas",
    "pm2:restart": "pm2 restart recargas",
    "pm2:reload": "pm2 reload recargas",
    "pm2:delete": "pm2 delete recargas",
    "pm2:status": "pm2 status recargas",
    "pm2:logs": "pm2 logs recargas",
    "pm2:monitor": "pm2 monit",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testMatch='**/tests/integration/**/*.test.js'",
    "test:unit": "jest --testMatch='**/tests/unit/**/*.test.js'",
    "test:legacy": "node tests/integration.test.js",
    "setup": "node scripts/setup.js",
    "monitor": "node monitor.js",
    "analytics": "node monitor-advanced.js",
    "analytics:single": "node monitor-advanced.js --single",
    "analytics:export": "node monitor-advanced.js --export",
    "analytics:demo": "node simple-demo.js",
    "dashboard": "node monitor-advanced.js",
    "performance:test": "node scripts/test-performance.js",
    "performance:indexes": "echo 'Ejecutar: mysql -u admin -p < scripts/database-indexes.sql'",
    "performance:monitor": "node -e \"require('./lib/performance/PerformanceMonitor').logCurrentStatus()\"",
    "performance:cache-stats": "node -e \"require('./lib/database').getPerformanceCache()?.logStats()\"",
    "performance:bypass-on": "node -e \"require('./lib/database').getPerformanceCache()?.enableBypassMode('Manual')\"",
    "performance:bypass-off": "node -e \"require('./lib/database').getPerformanceCache()?.disableBypassMode()\"",
    "alerts:test": "node scripts/test-alerts.js",
    "alerts:test-slack": "node -e \"require('./lib/alerts/AlertManager').sendQuickAlert('LOW', 'Test Slack', 'Prueba de canal Slack')\"",
    "alerts:test-email": "node -e \"require('./lib/alerts/AlertManager').sendQuickAlert('LOW', 'Test Email', 'Prueba de canal Email')\"",
    "alerts:test-telegram": "node -e \"require('./lib/alerts/AlertManager').sendQuickAlert('LOW', 'Test Telegram', 'Prueba de canal Telegram')\"",
    "alerts:test-webhook": "node -e \"require('./lib/alerts/AlertManager').sendQuickAlert('LOW', 'Test Webhook', 'Prueba de canal Webhook')\"",
    "alerts:config": "node -e \"const a = new (require('./lib/alerts/AlertManager'))(); console.log(JSON.stringify(a.getStats(), null, 2))\"",
    "health:check": "node lib/health/HealthCheckManager.js --once",
    "dashboard:start": "node dashboard/server.js",
    "dashboard:dev": "nodemon dashboard/server.js"
  },
  "dependencies": {
    "sequelize": "^6.35.0",
    "mysql2": "^3.7.0",
    "redis": "^4.6.0",
    "ioredis": "^5.3.2",
    "generic-pool": "^3.9.0",
    "moment-timezone": "^0.5.43",
    "node-schedule": "^2.1.1",
    "axios": "^1.6.0",
    "axios-retry": "^3.9.0",
    "easy-soap-request": "^5.3.0",
    "xml2js": "^0.6.2",
    "mongoose": "^7.6.0",
    "underscore": "^1.13.6",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "nodemailer": "^6.9.0",
    "node-telegram-bot-api": "^0.64.0",
    "express": "^4.18.0",
    "socket.io": "^4.7.0",
    "chart.js": "^4.4.0",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@jest/globals": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "lib/**/*.js",
      "index.js",
      "!lib/**/*.backup.js",
      "!node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"]
  }
}
