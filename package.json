{
  "name": "recargas-optimizado",
  "version": "2.0.0",
  "description": "Sistema optimizado de recargas prepago GPS, VOZ e IoT",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testMatch='**/tests/integration/**/*.test.js'",
    "test:unit": "jest --testMatch='**/tests/unit/**/*.test.js'",
    "test:legacy": "node tests/integration.test.js",
    "setup": "node scripts/setup.js",
    "monitor": "node monitor.js",
    "analytics": "node monitor-advanced.js",
    "analytics:single": "node monitor-advanced.js --single",
    "analytics:export": "node monitor-advanced.js --export",
    "analytics:demo": "node simple-demo.js",
    "dashboard": "node monitor-advanced.js"
  },
  "dependencies": {
    "sequelize": "^6.35.0",
    "mysql2": "^3.6.0",
    "redis": "^4.6.0",
    "moment-timezone": "^0.5.43",
    "node-schedule": "^2.1.1",
    "axios": "^1.6.0",
    "axios-retry": "^3.9.0",
    "easy-soap-request": "^5.3.0",
    "xml2js": "^0.6.2",
    "mongoose": "^7.6.0",
    "underscore": "^1.13.6",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@jest/globals": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "lib/**/*.js",
      "index.js",
      "!lib/**/*.backup.js",
      "!node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"]
  }
}
