# ===============================================
# ARCHIVO DE CONFIGURACIÓN - TEMPLATE
# ===============================================
# 
# INSTRUCCIONES:
# 1. Copiar este archivo como .env
# 2. Completar con valores reales
# 3. NUNCA commitear .env con credenciales reales
#

# ===== BASES DE DATOS =====
# MySQL - GPS Database (Principal)
GPS_DB_HOST=localhost
GPS_DB_USER=root
GPS_DB_PASSWORD=tu_password_aqui
GPS_DB_NAME=gps_db

# MySQL - ELIoT Database (Consultas)
ELIOT_DB_HOST=localhost
ELIOT_DB_USER=root
ELIOT_DB_PASSWORD=tu_password_aqui
ELIOT_DB_NAME=eliot_db

# Redis (Cache y Locks)
REDIS_HOST=10.8.0.1
REDIS_PORT=6379

# MongoDB (Métricas ELIoT)
MONGODB_URL=mongodb://localhost:27017/metrics

# ===== PROVEEDORES DE RECARGAS =====
# TAECEL (Principal)
TAECEL_URL=https://taecel.com/app/api
TAECEL_KEY=tu_taecel_key_aqui
TAECEL_NIP=tu_taecel_nip_aqui

# MST (Fallback)
MST_URL=https://www.ventatelcel.com/ws/index.php?wsdl
MST_USER=tu_mst_usuario_aqui
MST_PASSWORD=tu_mst_password_aqui

# ===== CONFIGURACIÓN DE SERVICIOS =====
# GPS Configuration
GPS_MINUTOS_SIN_REPORTAR=10
GPS_DIAS_SIN_REPORTAR_LIMITE=30

# ELIoT Configuration  
ELIOT_DIAS_SIN_REPORTAR=14
ELIOT_MINUTOS_SIN_REPORTAR=10

# ===== CONNECTION POOL CONFIGURATION =====
# Redis Connection Pool Settings
REDIS_POOL_MIN=2
REDIS_POOL_MAX=10
REDIS_POOL_ACQUIRE_TIMEOUT=30000
REDIS_POOL_IDLE_TIMEOUT=300000
REDIS_POOL_EVICTION_INTERVAL=60000

# MySQL Connection Pool Settings
MYSQL_POOL_MIN=5
MYSQL_POOL_MAX=25
MYSQL_POOL_ACQUIRE_TIMEOUT=60000
MYSQL_POOL_IDLE_TIMEOUT=30000
MYSQL_POOL_EVICTION_TIMEOUT=60000

# Pool Monitoring Settings
POOL_MONITORING_ENABLED=true
POOL_STATS_INTERVAL=300000
POOL_DRAIN_TIMEOUT=10000

# ===== CONFIGURACIÓN DE DESARROLLO =====
# Environment
NODE_ENV=development

# Testing flags (opcional)
TEST_VOZ=false
TEST_ELIOT=false

# Logging level
LOG_LEVEL=info

# ===== NOTAS IMPORTANTES =====
# - Todos los passwords deben ser seguros
# - TAECEL_KEY y TAECEL_NIP son obligatorios para recargas
# - Redis en 10.8.0.1 es la configuración de producción
# - MongoDB es opcional (solo para ELIoT metrics)
# - En producción cambiar NODE_ENV=production
